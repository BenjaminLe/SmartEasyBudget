                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="androidApplication.smarteasybudget.RecettesActivity"
            android:label="@string/recette_activity" />
